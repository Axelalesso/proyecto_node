<div class="container" style="margin: 50px auto">
    <div class="row">
        <div class="col-6 offset-3">
            <h4>Modificar la noticia</h4>
            <form  action="/admin/noticias/modificar" method="post" enctype="multipart/form-data">
                <input type="hidden" value="{{noticias.id}}" name="id">
                <div class="form-group">
                    <input type="text" placeholder="titulo" value="{{noticias.titulo}}" class="form-control" name="titulo">
                </div>
                <div class="form-group">
                    <textarea placeholder="subtitulo" class="form-control" name="subtitulo">{{noticias.subtitulo}}</textarea>
                </div>
                <div class="form-group">
                    <p>
                    <label> Imagen: <input class="form-control"  type="file" name="imagen" id="imagen"/></label>
                    </p>
                    <p>
                        <label><input type="checkbox" name="img_delete" id="img_delete" value="1">
                        Eliminar imagen actual?</label>
                        <input type="hidden" name="img_original" value="{{noticias.img_id}}">
                    </p>
                </div>
                <div class="form-group">
                    <textarea placeholder="cuerpo" class="form-control" name="cuerpo">{{noticias.cuerpo}}</textarea>
                </div>
                <button type="submit" class="btn btn-primary">Modificar</button>
            </form>
        </div>
    </div>
    
    {{#if error}}
    <h5>{{message}}</h5>
    {{/if}}






</div>